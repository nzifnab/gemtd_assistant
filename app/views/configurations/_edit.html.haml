#save-window.modal.hide.fade{role: 'dialog', tabindex: '-1'}
  .modal-header
    %button.close{type: 'button', data: {dismiss: 'modal'}}
      %i.icon-remove
    %h3 Save Configuration
  .modal-body
    %form.form-inline.js-saved-configurations
      %ul.unstyled
    = label_tag(:configuration_name, "Name")
    = text_field_tag(:configuration_name, nil, placeholder: "Save as...")
  .modal-footer
    %button.btn{data: {dismiss: "modal"}} Close
    %button.btn.btn-primary.js-save-configuration Save Changes
